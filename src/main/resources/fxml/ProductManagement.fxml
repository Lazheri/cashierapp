<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cashier.controller.ProductManagementController">
   <top>
      <Label styleClass="section-title" text="Gestion des Produits">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <HBox spacing="10.0">
         <children>
            <!-- Left Panel: Product List -->
            <VBox prefWidth="500.0" spacing="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Button onAction="#refreshProducts" text="Actualiser" />
                        <Button onAction="#deleteProduct" text="Supprimer" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="productsTable" prefHeight="500.0">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nom" />
                        <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Prix (TND)" />
                        <TableColumn fx:id="stockColumn" prefWidth="80.0" text="Stock" />
                        <TableColumn fx:id="barcodeColumn" prefWidth="120.0" text="Code-barres" />
                        <TableColumn fx:id="typeColumn" prefWidth="80.0" text="Type" />
                        <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Catégorie" />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Right Panel: Product Form -->
            <VBox prefWidth="300.0" spacing="15.0">
               <children>
                  <Label styleClass="section-title" text="Ajouter/Modifier Produit" />
                  
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="80.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     <children>
                        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Prix:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Code-barres:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="barcodeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <ChoiceBox fx:id="typeChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                     </children>
                  </GridPane>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Button onAction="#saveProduct" prefWidth="100.0" text="Enregistrer" />
                        <Button onAction="#clearForm" prefWidth="100.0" text="Effacer" />
                     </children>
                  </HBox>
                  
                  <Label fx:id="messageLabel" styleClass="message-label" wrapText="true" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>

