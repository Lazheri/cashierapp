<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cashier.controller.DashboardController">
    <top>
        <VBox spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Date de début:" />
                        <DatePicker fx:id="startDatePicker" />
                        <Label text="Date de fin:" />
                        <DatePicker fx:id="endDatePicker" />
                        <Button onAction="#handleApplyFilter" text="Appliquer" />
                        <Button onAction="#handleResetFilter" text="Réinitialiser" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="10.0" bottom="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox spacing="20.0" style="-fx-padding: 10;">
                    <children>
                        <HBox spacing="20.0">
                            <children>
                                <VBox spacing="5.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;">
                                    <children>
                                        <Label text="Ventes du jour" styleClass="section-title" />
                                        <Label fx:id="dailySalesLabel" text="0.000 TND" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2196F3;" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;">
                                    <children>
                                        <Label text="Ventes de la semaine" styleClass="section-title" />
                                        <Label fx:id="weeklySalesLabel" text="0.000 TND" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;">
                                    <children>
                                        <Label text="Clients actifs" styleClass="section-title" />
                                        <Label fx:id="activeCustomersLabel" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;">
                                    <children>
                                        <Label text="Produits en rupture" styleClass="section-title" />
                                        <Label fx:id="lowStockLabel" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #f44336;" />
                                    </children>
                                </VBox>
                            </children>
                            <HBox.setHgrow>
                                <Priority value="ALWAYS" />
                            </HBox.setHgrow>
                        </HBox>

                        <VBox spacing="10.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;">
                            <children>
                                <Label text="Produits les plus vendus" styleClass="section-title" />
                                <TableView fx:id="topProductsTable" prefHeight="200.0">
                                    <columns>
                                        <TableColumn fx:id="productNameColumn" prefWidth="200.0" text="Produit" />
                                        <TableColumn fx:id="quantitySoldColumn" prefWidth="100.0" text="Qté Vendue" />
                                        <TableColumn fx:id="revenueColumn" prefWidth="100.0" text="Revenu" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <VBox spacing="10.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;">
                            <children>
                                <Label text="Clients top" styleClass="section-title" />
                                <TableView fx:id="topCustomersTable" prefHeight="200.0">
                                    <columns>
                                        <TableColumn fx:id="customerNameColumn" prefWidth="150.0" text="Nom" />
                                        <TableColumn fx:id="totalSpentColumn" prefWidth="100.0" text="Total dépensé" />
                                        <TableColumn fx:id="loyaltyPointsColumn" prefWidth="100.0" text="Points Loyauté" />
                                        <TableColumn fx:id="purchaseCountColumn" prefWidth="100.0" text="Nb achats" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <VBox spacing="10.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10;">
                            <children>
                                <Label text="Produits en rupture de stock" styleClass="section-title" />
                                <TableView fx:id="lowStockTable" prefHeight="150.0">
                                    <columns>
                                        <TableColumn fx:id="lowStockProductColumn" prefWidth="200.0" text="Produit" />
                                        <TableColumn fx:id="stockQuantityColumn" prefWidth="100.0" text="Stock" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
