<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cashier.controller.CustomerManagementController">
    <top>
        <VBox spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="searchField" promptText="Rechercher par nom ou téléphone..." prefWidth="300.0" />
                        <Button onAction="#handleSearch" text="Rechercher" />
                        <Button onAction="#handleClearSearch" text="Afficher tous" />
                        <Separator orientation="VERTICAL" />
                        <Button onAction="#handleAddCustomer" text="Ajouter un client" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="10.0" bottom="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.4" prefHeight="400.0">
            <items>
                <VBox spacing="10.0" prefWidth="300.0">
                    <children>
                        <Label styleClass="section-title" text="Clients" />
                        <TableView fx:id="customersTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Nom" />
                                <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Téléphone" />
                                <TableColumn fx:id="pointsColumn" prefWidth="80.0" text="Points" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="10.0" bottom="10.0" />
                    </padding>
                </VBox>
                <VBox spacing="10.0" prefWidth="400.0">
                    <children>
                        <Label styleClass="section-title" text="Détails du Client" />
                        <VBox spacing="8.0">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label text="ID:" style="-fx-font-weight: bold;" prefWidth="80.0" />
                                        <TextField fx:id="idField" editable="false" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label text="Nom:" style="-fx-font-weight: bold;" prefWidth="80.0" />
                                        <TextField fx:id="nameField" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label text="Téléphone:" style="-fx-font-weight: bold;" prefWidth="80.0" />
                                        <TextField fx:id="phoneField" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label text="Email:" style="-fx-font-weight: bold;" prefWidth="80.0" />
                                        <TextField fx:id="emailField" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label text="Points Loyauté:" style="-fx-font-weight: bold;" prefWidth="80.0" />
                                        <TextField fx:id="pointsField" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Label text="Notes:" style="-fx-font-weight: bold;" prefWidth="80.0" />
                                    </children>
                                </HBox>
                                <TextArea fx:id="notesField" prefRowCount="3" wrapText="true" />
                            </children>
                        </VBox>
                        <Separator />
                        <HBox spacing="10.0">
                            <children>
                                <Button onAction="#handleSaveCustomer" text="Enregistrer" style="-fx-font-size: 12;" />
                                <Button onAction="#handleDeleteCustomer" text="Supprimer" style="-fx-font-size: 12;" />
                            </children>
                        </HBox>
                        <Separator />
                        <Label styleClass="section-title" text="Historique d'achats" />
                        <TableView fx:id="purchaseHistoryTable" prefHeight="150.0">
                            <columns>
                                <TableColumn fx:id="saleIdColumn" prefWidth="60.0" text="ID Vente" />
                                <TableColumn fx:id="saleDateColumn" prefWidth="150.0" text="Date" />
                                <TableColumn fx:id="saleTotalColumn" prefWidth="100.0" text="Total" />
                                <TableColumn fx:id="pointsUsedColumn" prefWidth="100.0" text="Points Utilisés" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="10.0" bottom="10.0" />
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
