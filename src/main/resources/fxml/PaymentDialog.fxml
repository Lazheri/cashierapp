<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cashier.controller.PaymentDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="section-title" text="Paiement" />
        
        <Separator />
        
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <children>
                <Label text="Total à payer:" styleClass="label-bold" />
                <Label fx:id="totalLabel" styleClass="total-price" text="0.000 TND" />
            </children>
        </HBox>
        
        <Separator />
        
        <Label text="Mode de paiement:" styleClass="label-bold" />
        <ComboBox fx:id="paymentMethodCombo" promptText="Sélectionner le mode de paiement" prefWidth="250.0" />
        
        <VBox fx:id="cashPaymentBox" spacing="10.0" visible="false" managed="false">
            <children>
                <Label text="Montant reçu:" />
                <TextField fx:id="cashAmountField" promptText="Entrer le montant reçu" />
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <children>
                        <Label text="Monnaie à rendre:" styleClass="label-bold" />
                        <Label fx:id="changeLabel" styleClass="change-amount" text="0.000 TND" />
                    </children>
                </HBox>
            </children>
        </VBox>
        
        <VBox fx:id="cardPaymentBox" spacing="10.0" visible="false" managed="false">
            <children>
                <Label text="Numéro de carte (4 derniers chiffres):" />
                <TextField fx:id="cardNumberField" promptText="Ex: 1234" maxWidth="150.0" />
                <Label text="Marque de la carte:" />
                <ComboBox fx:id="cardBrandCombo" promptText="Sélectionner la marque" prefWidth="200.0" />
            </children>
        </VBox>
        
        <VBox fx:id="digitalPaymentBox" spacing="10.0" visible="false" managed="false">
            <children>
                <Label text="Référence de transaction:" />
                <TextField fx:id="transactionReferenceField" promptText="Ex: TXN123456789" />
            </children>
        </VBox>
        
        <Label fx:id="errorLabel" styleClass="error-message" text="" textFill="RED" wrapText="true" />
        
        <Separator />
        
        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Button text="Confirmer" onAction="#confirmPayment" styleClass="button-primary" prefWidth="120.0" />
                <Button text="Annuler" onAction="#cancelPayment" prefWidth="120.0" />
            </children>
        </HBox>
    </children>
</VBox>
