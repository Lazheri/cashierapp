<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cashier.controller.ReceiptController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="section-title" text="Reçu de Vente" />
        <Label fx:id="saleIdLabel" text="ID de Vente: " />
        <Label fx:id="saleDateLabel" text="Date: " />
        <Label fx:id="customerLabel" text="Client: " />
        <Label fx:id="loyaltyPointsLabel" text="Points loyauté: " />
        <Separator />
        <Label text="Détails des Articles:" />
        <TableView fx:id="receiptItemsTable" prefHeight="200.0" prefWidth="300.0">
            <columns>
                <TableColumn fx:id="receiptProductColumn" prefWidth="150.0" text="Produit" />
                <TableColumn fx:id="receiptQuantityColumn" prefWidth="75.0" text="Qté" />
                <TableColumn fx:id="receiptPriceColumn" prefWidth="75.0" text="Prix" />
            </columns>
        </TableView>
        <Separator />
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Label text="Total:" />
                <Label fx:id="receiptTotalLabel" styleClass="total-price" text="0.000 TND" />
            </children>
        </HBox>
        <Button onAction="#closeReceipt" text="Fermer" />
    </children>
</VBox>

